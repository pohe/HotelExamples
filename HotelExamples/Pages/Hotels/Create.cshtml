@page
@using HotelExamples.Models
@model HotelExamples.Pages.Hotels.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create a hotel </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Hotel.HotelNr" class="control-label"></label>
                <input asp-for="@Model.Hotel.HotelNr" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Hotel.Navn" class="control-label"></label>
                <input asp-for="@Model.Hotel.Navn" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Hotel.Adresse" class="control-label"></label>
                <input asp-for="@Model.Hotel.Adresse" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Hotel.VIP" class="control-label"></label>

                <select name="vip_id" class="form-control">
                    <option value="">Selevet VIP status</option>
                    <option value="VIP">VIP</option>
                    <option value="NOTVIP">Not VIP</option>
                    <option value="NoINFO">No info</option>
                </select>
               
            </div>
            <div class="form-group">
                <label asp-for="@Model.Photo" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="@Model.Photo" class="custom-file-input form-control" />
                    @*<label class="custom-file-label">Gem Billede</label>*@
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Hotel.HotelType" class="control-label"></label>
                <select asp-for="@Model.Hotel.HotelType" asp-items="Html.GetEnumSelectList<HotelTypes>()" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
